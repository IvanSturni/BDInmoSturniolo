@model BDInmoSturniolo.Models.Contrato

@{
    ViewData["Title"] = "Detalles";
    Inquilino inq = Model.Inquilino;
}

<h1>Detalles</h1>

<div>
    <h4>@Model.GetType().Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFinal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFinal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        @if (Model.FechaCancelacion.HasValue)
        {
            <dt class="col-sm-2 text-danger">
                @Html.DisplayNameFor(model => model.FechaCancelacion)
            </dt>
            <dd class="col-sm-10 text-danger">
                @Html.DisplayFor(model => model.FechaCancelacion)
            </dd>
            <dt class="col-sm-2 text-danger">
                @Html.DisplayNameFor(model => model.Multa)
            </dt>
            <dd class="col-sm-10 text-danger">
                @Html.DisplayFor(model => model.Multa)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InquilinoId)  <i class="bi bi-file-person"></i>
        </dt>
        <dd class="col-sm-10">
            @inq.Nombre @inq.Apellido, Id @inq.Id
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)  <i class="bi bi-house-fill"></i>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inmueble.Direccion), Id @Html.DisplayFor(model => model.InmuebleId)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Volver a la lista</a>
</div>


