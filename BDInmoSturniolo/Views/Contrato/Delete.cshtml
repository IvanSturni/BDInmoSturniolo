@model BDInmoSturniolo.Models.Contrato

@{
    ViewData["Title"] = "Eliminar";
    Inquilino inq = Model.Inquilino;
}

<h1>Eliminar</h1>

<h3>Está seguro que desea eliminar este @Model.GetType().Name?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EsVigente)
        </dt>
        <dd class = "col-sm-10">
            <i class="bi bi-@(Model.EsVigente ? "check-circle-fill text-success" : "x-circle text-danger")"></i>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFinal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFinal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InquilinoId)  <i class="bi bi-file-person"></i>
        </dt>
        <dd class="col-sm-10">
            @inq.Nombre @inq.Apellido, Id @inq.Id
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)  <i class="bi bi-house-fill"></i>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inmueble.Direccion), Id @Html.DisplayFor(model => model.InmuebleId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
